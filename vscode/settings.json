{
    "editor.tabSize": 2,
    "workbench.startupEditor": "none",
    "emmet.triggerExpansionOnTab": true,
    "editor.minimap.enabled": false,
    "editor.fontSize": 18,
    "editor.fontFamily": "'Fira Code', Menlo, Monaco, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "terminal.integrated.fontSize": 16,
    "workbench.statusBar.feedback.visible": false,
    "ruby.intellisense": "rubyLocate",
    "files.trimTrailingWhitespace": true,
    "terminal.external.osxExec": "iTerm.app",
    "editor.multiCursorModifier": "alt",
    "liveshare.featureSet": "stable",
    "ruby.useLanguageServer": true,
    "workbench.tips.enabled": false,
    "terminal.explorerKind": "external",
    "workbench.colorTheme": "Darcula",
    "extensions.ignoreRecommendations": true,
    "workbench.editor.untitled.hint": "hidden",
    "explorer.autoReveal": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.lineNumbers": "on",
    "git.confirmSync": false,
    "editor.guides.bracketPairs": true,
    "workbench.colorCustomizations": {
        "[Darcula]": {
            "activityBar.background": "#3B3F41",
            "breadcrumb.background": "#313335",
            "editorGroupHeader.tabsBackground": "#3B3F41",
            "editorGutter.background": "#313335",
            "editorLineNumber.activeForeground": "#A4A3A3",
            "editorLineNumber.foreground": "#5F6366",
            "scrollbar.shadow": "#00000000",
            "statusBar.background": "#3B3F41",
            "statusBar.noFolderBackground": "#3B3F41",
            "tab.activeBackground": "#4D5254",
            "tab.activeBorder": "#3188CC",
            "tab.border": "#3B3F41",
            "tab.hoverBackground": "#26292A",
            "tab.inactiveBackground": "#3B3F41",
            "tab.inactiveForeground": "#ddd",
            "titleBar.activeBackground": "#3B3F41",
            "titleBar.inactiveBackground": "#3B3F41",
            // "window.activeBorder": "#636567",
        }
    },
    "workbench.list.keyboardNavigation": "simple",
    "workbench.enableExperiments": false,
    "workbench.list.openMode": "doubleClick",
    "solargraph.commandPath": "/workspaces/github/bin/solargraph",
    "window.restoreWindows": "none"
}
